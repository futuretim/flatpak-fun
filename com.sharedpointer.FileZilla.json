{
    "app-id": "com.sharedpointer.FileZilla",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.24",
    "sdk": "org.gnome.Sdk",
    "command": "filezilla",
    "finish-args": [
        "--share=ipc", 
        "--socket=x11",
        "--socket=wayland",
        "--share=network"
    ],
    "build-options" : {
        "cflags": "-O2 -g",
        "cxxflags": "-O2 -g"
    },
    "cleanup": ["/include", "/lib/pkgconfig",
                "/share/pkgconfig", "/share/aclocal",
                "/man", "/share/man", "/share/gtk-doc",
                "/share/vala", "*.la", "*.a",
                "/bin/gcalccmd",
                "/lib/girepository-1.0", "/share/info", "/share/gtksourceview-3.0",
                "/share/doc", "/share/gir-1.0"
    ],
    "modules": [
        {
            "name": "wxWidgets",
            "no-autogen": true,
            "sources": [
                {
                    "type": "archive",
                    "path": "wxWidgets-3.0.2.tar.bz2",
                    "sha256": "346879dc554f3ab8d6da2704f651ecb504a22e9d31c17ef5449b129ed711585d"
                },
               {
                   "type": "patch",
                   "path": "wxWidgets-1.patch"                   
               },
               {
                    "type": "shell",
                    "commands": [
                        "mkdir gtk-build",
                        "cd gtk-build && ../configure --enable-unicode --prefix=/app && make -j5 install"
                    ]
                }
            ]
        },
        {
            "name": "libfilezilla",
            "sources": [
                {
                    "type": "archive",
                    "path": "libfilezilla-0.9.1.tar.bz2",
                    "sha256": "18b2391771f330cccab2c55a66197b9098f236e616f26f86326795b900913b1a"
                }
            ]
        },
        {
            "name": "filezilla",
            "config-opts": [
                "--with-pugixml=builtin"
            ],
            "sources": [
                {
                    "type": "archive",
                    "path": "FileZilla_3.25.1_src.tar.bz2",
                    "sha256": "8873be716059cf7425b72dba5d130ea2a1ec62a769b4ada41f6c7313a2112fc1"
                }
            ]
        }
    ]
}
