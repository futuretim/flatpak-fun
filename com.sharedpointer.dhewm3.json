{
    "app-id": "com.sharedpointer.dhewm3",
    "version": "master",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "1.6",
    "sdk": "org.freedesktop.Sdk",
    "command": "dhewm3",
    "finish-args": ["--share=network", "--socket=x11", "--filesystem=host", "--device=dri" ],
    "build-options" : {
        "cflags": "-O2 -g",
        "cxxflags": "-O2 -g",
        "env": {
            "V": "1"
        }
    },
    "cleanup": ["/include", "/lib/*/include", "/lib/pkgconfig", "/share/pkgconfig", "/share/aclocal", "/man", "/share/man", "/share/info", "/share/gtk-doc", "*.la", "*.a" ],
    "modules": [
        {
            "name": "dhewm3",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/dhewm/dhewm3.git",
                    "branch": "master"
                }
            ],
            "buildsystem": "cmake",
            "config-opts": [ "-DCMAKE_INSTALL_PREFIX=/app" ],
            "builddir": true,
            "subdir": "neo"
        }
    ]
}
