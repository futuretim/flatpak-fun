{
    "app-id": "com.sharedpointer.ioquake3",
    "version": "master",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.22",
    "sdk": "org.gnome.Sdk",
    "command": "ioquake3.x86_64",
    "finish-args": ["--share=network", "--socket=x11", "--filesystem=host", "--device=dri" ],
    "build-options" : {
        "cflags": "-O2 -g",
        "cxxflags": "-O2 -g",
        "env": {
            "V": "1"
        }
    },
    "cleanup": ["/include", "/lib/*/include", "/lib/pkgconfig", "/share/pkgconfig", "/share/aclocal", "/man", "/share/man", "/share/info", "/share/gtk-doc", "*.la", "*.a" ],
    "modules": [
        {
            "name": "ioquake3",
            "no-autogen": true,
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/ioquake/ioq3.git",
                    "branch": "master"
                },
                {
                    "type": "shell",
                    "commands": [
                      "make",
                      "install -m 755 quake3.launcher /app/bin"
                    ]
                }
            ]
        }
    ]
}
