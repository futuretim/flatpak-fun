{
    "app-id": "com.sharedpointer.Unvanquished",
    "version": "0.50",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.24",
    "sdk": "org.gnome.Sdk",
    "command": "unvanquished",
    "finish-args": ["--share=ipc", "--socket=x11", "--filesystem=host", "--device=dri" ],
    "build-options" : {
        "cflags": "-O2 -g",
        "cxxflags": "-O2 -g",
        "env": {
            "V": "1"
        },
        "build-args": [
            "--share=network"
        ]
    },
    "cleanup": ["/include", "/lib/*/include", "/lib/pkgconfig", "/share/pkgconfig", "/share/aclocal", "/man", "/share/man", "/share/info", "/share/gtk-doc", "*.la", "*.a" ],
    "modules": [
        {
            "name": "opus",
            "sources": [
                {
                    "type": "archive",
                    "path": "opus-1.1.4.tar.gz",
                    "sha256": "9122b6b380081dd2665189f97bfd777f04f92dc3ab6698eea1dbb27ad59d8692"
                }
            ]
        },
        {
           "name": "Unvanquished",
           "no-autogen": true,
           "post-install": [
           ],
           "sources": [
               {
                   "type": "archive",
                   "path": "Unvanquished-0.50.0.tar.gz",
                   "sha256": "98e0a7edb5623df866fdfdf2983ded2d49bc71b42e5fedc46f86cedb45ec7aeb"
               },
               {
                    "type": "shell",
                    "commands": [ 
                        "mkdir build",
                        "cd build && cmake .. && make"
                    ]
               }
            ]
        }
    ]
}